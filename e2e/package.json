{
  "name": "financial-planning-calculator-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Financial Planning Calculator",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:health": "playwright test health-check.spec.ts",
    "test:goals": "playwright test goals-scenario.spec.ts",
    "test:financial": "playwright test financial-data-scenario.spec.ts",
    "test:calculations": "playwright test calculation-scenario.spec.ts",
    "test:scenarios": "playwright test goals-scenario.spec.ts financial-data-scenario.spec.ts calculation-scenario.spec.ts",
    "report": "playwright show-report test-results/html",
    "install": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
