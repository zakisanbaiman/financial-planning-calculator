{
  "name": "financial-planning-calculator",
  "version": "1.0.0",
  "private": true,
  "description": "Financial Planning Calculator - 将来の資産形成と老後の財務計画を可視化するアプリケーション",
  "scripts": {
    "prepare": "husky install",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && go vet ./... && gofmt -l .",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run lint -- --fix",
    "format:backend": "cd backend && gofmt -w .",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && go test ./...",
    "test:e2e": "cd e2e && npm test",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && go run main.go",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o server main.go"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
