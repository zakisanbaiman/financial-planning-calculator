# Server Configuration
PORT=8080
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://localhost:3000,https://localhost:3001

# Rate Limiting
RATE_LIMIT_RPS=100

# Request Configuration
REQUEST_TIMEOUT=30s
MAX_REQUEST_SIZE=10M

# Compression
ENABLE_GZIP=true
GZIP_LEVEL=5

# Security
ENABLE_SECURE_HEADERS=true

# Logging
LOG_FORMAT=${time_rfc3339} ${method} ${uri} ${status} ${latency_human} ${bytes_in}B/${bytes_out}B ${error}\n

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=financial_planning
DB_SSLMODE=disable